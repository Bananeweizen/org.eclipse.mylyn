<project name="Download epubcheck" basedir="." default="download">

	<property name="epubcheck-version" value="3.0b4" />
	<property name="epubcheck-zip" value="epubcheck-${epubcheck-version}.zip" />
	<property name="epubcheck-dir" location="${basedir}/epubcheck/" />
	<property name="epubcheck-jar" location="${epubcheck-dir}/epubcheck-${epubcheck-version}.jar" />

	<available file="${epubcheck-jar}" type="file" property="epubcheck-present" />
	
	<target name="download" unless="epubcheck-present">
		<get src="http://epubcheck.googlecode.com/files/${epubcheck-zip}"
			dest="${epubcheck-zip}" />
		<unzip src="${epubcheck-zip}" dest="${epubcheck-dir}" />
		<delete file="${epubcheck-zip}" />
	</target>
	
</project>