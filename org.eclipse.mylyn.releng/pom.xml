<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <prerequisites>
    <maven>3.0</maven>
  </prerequisites>

  <groupId>org.eclipse.mylyn</groupId>
  <artifactId>mylyn-parent</artifactId>
  <version>3.5.0-SNAPSHOT</version>
  <packaging>pom</packaging>

  <mailingLists>
    <mailingList>
      <name>mylyn-dev Mailing List</name>
      <post>mylyn-dev@eclipse.org</post>
      <subscribe>https://dev.eclipse.org/mailman/listinfo/mylyn-dev</subscribe>
      <unsubscribe>https://dev.eclipse.org/mailman/listinfo/mylyn-dev</unsubscribe>
      <archive>http://dev.eclipse.org/mhonarc/lists/mylyn-dev</archive>
    </mailingList>
  </mailingLists>

  <issueManagement>
    <url>https://bugs.eclipse.org/bugs/buglist.cgi?query_format=advanced;classification=Mylyn</url>
    <system>Bugzilla</system>
  </issueManagement>

  <licenses>
    <license>
      <name>Eclipse Public License v1.0</name>
      <comments>
       All rights reserved.

       This program and the accompanying materials are made
       available under the terms of the Eclipse Public License v1.0
       which accompanies this distribution, and is available at
       http://www.eclipse.org/legal/epl-v10.htm
      </comments>
    </license>
  </licenses>

  <properties>
    <mylyn-version>3.5.0-SNAPSHOT</mylyn-version>
    <tycho-version>0.10.0</tycho-version>
    <platform-version-name>indigo</platform-version-name>
    <target-platform>mylyn-e3.7</target-platform>
    <eclipse-site>http://download.eclipse.org/releases/${platform-version-name}</eclipse-site>
    <swtbot-site>http://download.eclipse.org/technology/swtbot/${platform-version-name}/dev-build/update-site</swtbot-site>
    <wikitext-site>http://download.eclipse.org/tools/mylyn/update/weekly</wikitext-site>
    <orbit-site>http://download.eclipse.org/tools/orbit/downloads/drops/R20100519200754/repository</orbit-site>
  </properties>

  <profiles>
    <profile>
      <id>platform-ganymede</id>
      <activation>
        <property>
          <name>platform-version-name</name>
          <value>ganymede</value>
        </property>
      </activation>
      <properties>
        <platform-version>[3.4,3.5)</platform-version>
        <target-platform>mylyn-e3.4</target-platform>
      </properties>
    </profile>
    <profile>
      <id>platform-galileo</id>
      <activation>
        <property>
          <name>platform-version-name</name>
          <value>galileo</value>
        </property>
      </activation>
      <properties>
        <platform-version>[3.5,3.6)</platform-version>
        <target-platform>mylyn-e3.5</target-platform>
      </properties>
    </profile>
    <profile>
      <id>platform-helios</id>
      <activation>
        <property>
          <name>platform-version-name</name>
          <value>helios</value>
        </property>
      </activation>
      <properties>
        <platform-version>[3.6,3.7)</platform-version>
        <target-platform>mylyn-e3.6</target-platform>
      </properties>
    </profile>
    <profile>
      <id>platform-indigo</id>
      <activation>
        <property>
          <name>platform-version-name</name>
          <value>indigo</value>
        </property>
      </activation>
      <properties>
        <platform-version>[3.7,3.8)</platform-version>
        <target-platform>mylyn-e3.7</target-platform>
      </properties>
    </profile>
  </profiles>

  <modules>
    <module>target-definition</module>
    <module>../../org.eclipse.mylyn</module>
    <module>../../org.eclipse.mylyn.commons</module>
    <module>../../org.eclipse.mylyn.versions</module>
    <module>../../org.eclipse.mylyn.tasks</module>
    <module>../../org.eclipse.mylyn.contexts</module>
    <module>../../org.eclipse.mylyn.builds</module>
    <module>../../org.eclipse.mylyn.docs</module>
    <module>../../org.eclipse.mylyn.incubator</module>
    <module>main-site</module>
    <module>incubator-site</module>
   </modules>

